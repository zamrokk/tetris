    "lint:fix": "eslint src --ext .ts --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx,css,html}\""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/zamrokk/tetris.git"
  },
  "keywords": [
